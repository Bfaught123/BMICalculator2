<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BMICalculator2.RecommendationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Recommendations"
    BackgroundColor="#F3F3F8">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <Label Text="Health Recommendations Page"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#222222" />

            <Frame BackgroundColor="White" CornerRadius="16" Padding="16" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="RecommendationsLabel"
                           FontSize="16"
                           TextColor="#222222" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Back to Results"
                    Clicked="OnBackToResultsClicked"
                    BackgroundColor="#101645"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50" />

            <Button Text="Back to Input"
                    Clicked="OnBackToInputClicked"
                    BackgroundColor="#DDDDDD"
                    TextColor="#111111"
                    CornerRadius="12"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
